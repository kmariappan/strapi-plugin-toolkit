{
  "name": "strapi-plugin-toolkit",
  "version": "0.1.0-beta.2",
  "description": "Content-type generator and utilities for better Developer Experience",
  "strapi": {
    "name": "toolkit",
    "displayName": "Toolkit",
    "description": "Content-type generator and utilities for better Developer Experience",
    "kind": "plugin"
  },
  "license": "MIT",
  "engines": {
    "node": ">=14"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "compile": "npm run clean && npm run build && node build/setup-package.js",
    "build": "tsc && yarn copy-translations",
    "build:dev": "yarn run build && cp ./package.json ./build",
    "copy-translations": "copyfiles admin/src/translations/*.json build/",
    "develop": "nodemon --exec \"yarn build:dev\"",
    "clean": "rm -rf build",
    "lint": "prettier --check .",
    "format": "prettier --write ."
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run prettier-format && npm run lint"
    }
  },
  "author": "Karthikeyan Mariappan",
  "peerDependencies": {
    "axios": "^0.27.2",
    "qs": "^6.10.3"
  },
  "devDependencies": {
    "@strapi/strapi": "^4.1.10",
    "@types/node": "^16.9.4",
    "@types/qs": "^6.9.7",
    "@typescript-eslint/eslint-plugin": "^5.12.1",
    "@typescript-eslint/parser": "^5.12.1",
    "axios": "^0.27.2",
    "copyfiles": "^2.4.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.9.0",
    "eslint-config-prettier": "^8.4.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.4",
    "nodemon": "^2.0.12",
    "prettier": "^2.5.1",
    "qs": "^6.10.3",
    "rimraf": "^3.0.2",
    "semantic-release": "^19.0.2",
    "ts-node": "^10.2.1"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kmariappan/strapi-plugin-toolkit.git"
  },
  "dependencies": {
    "@kmariappan/strapi-type-generator": "^1.1.5",
    "recursive-copy": "^2.0.14",
    "typescript": "^4.6.4"
  },
  "keywords": [
    "strapi",
    "plugin",
    "toolkit"
  ],
  "main": "generated/index.js",
  "module": "generated/index.mjs",
  "typings": "generated/index.d.ts",
  "nodemonConfig": {
    "restartable": "rs",
    "ignore": [
      ".git",
      "node_modules/",
      "./build/**/*"
    ],
    "watch": [
      "."
    ],
    "execMap": {
      "ts": "node -r ts-node/register"
    },
    "env": {
      "NODE_ENV": "development"
    },
    "ext": "js,json,ts,tsx"
  }
}
